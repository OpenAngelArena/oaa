      <Panel id="CorePointRow4" class="CorePointRow">
        <Panel class="UpgradeCoreIconPanel">
          <Image class="UpgradeCoreIcon" src="file://{images}/items/custom/upgrade_core_4.png"/>
        </Panel>
        <Panel class="UpgradeCoreTextPanel">
          <Label class="UpgradeCoreText" text="Upgrade Core 4"/>
        </Panel>
      </Panel>
      <Panel id="CorePointRow3" class="CorePointRow">
        <Panel class="UpgradeCoreIconPanel">
          <Image class="UpgradeCoreIcon" src="file://{images}/items/custom/upgrade_core_3.png"/>
        </Panel>
